<h1>
  <center>Search Flights</center>
</h1>

<br><br><br>
<div>
  <center>
    <label >Enter Origin City:</label><br>
    <input type="search" name="originCity"><br><br>
    <label >Enter Destination City:</label><br>
    <input type="search" name="destinationCity">
    <%#= form_with scope: 'filterCity', url: filterC_path, method: :put do |form| %>
      <%#= form.text_field  :id => :originCity1%>
      <%#= form.text_field  :id => :destinationCity1%>
      <%#=  %>
      <%#= link_to "Search", searchflights_path(:originCity => :originCity1, :destinationCity => :destinationCity1) %>
      <%#end %>


  </center>

</div>
<br><br><br>
<center>
  <button onclick=>Search</button>
</center>


<center>

  <br><br><br><br>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Flight</th>
    <th>Manufacturer</th>
    <th>Origincity</th>
    <th>Destinationcity</th>
    <th>Capacity</th>
    <th>Status</th>
    <th>Flight Cost ($)</th>
    <th>Class</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @flights.each do |flight| %>
    <tr>



      <td><center><%= flight.name %></center></td>

      <td><center><%= flight.flight_id %></center></td>
      <td><center><%= flight.manufacturer %></center></td>
      <td><center><%= flight.originCity %></center></td>
      <td><center><%= flight.destinationCity %></center></td>
      <td><center><%= flight.capacity %></center></td>
      <td><center><%= flight.status %></center></td>
      <td><center><%= flight.flight_cost %></center></td>
      <td><center><%= flight.flight_class %></center></td>
      <td><center><%= link_to 'Show', flight %></center></td>


      <% if current_user.email == "test@gmail.com"  %>
        <td><center><%= link_to 'Edit', edit_flight_path(flight) %></center></td>
        <td><center><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>

  <%else %>
        <td><center><%= link_to_if flight.status == 'Available', 'Reserve', new_reservation_path(:flight_id => flight.id) %></center></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

</center>
